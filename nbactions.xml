<!DOCTYPE actions>

<actions>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
        </goals>
        <properties>
            <exec.args>-enableassertions -Xmx1G -classpath %classpath ch.njol.skript.SkriptCLI</exec.args>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
        </goals>
        <properties>
            <exec.args>-agentlib:jdwp=transport=dt_socket,server=n,address=${jpda.address} -enableassertions -Xmx1G
                -classpath %classpath ch.njol.skript.SkriptCLI
            </exec.args>
            <exec.executable>java</exec.executable>
            <jpda.listen>true</jpda.listen>
        </properties>
    </action>
    <action>
        <actionName>profile</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.5.0:exec</goal>
        </goals>
        <properties>
            <exec.args>-enableassertions -Xmx1G -classpath %classpath ch.njol.skript.SkriptCLI</exec.args>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
</actions>
